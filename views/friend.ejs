<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>


<script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
</head>
<script>
         
  var eventapp = angular.module('eventapp', []); 
   
  eventapp.controller('event', ['$scope','$http',function($scope, $http) {        
  $scope.logout = function() { $http({              
       method: 'POST',              
       url: '/logout'                                   
       }).success(function(response){                                                          
       window.location = '/signin';                       
}).error(function(error){             
 alert("error");          
 });     
  };

  $scope.about = function() { $http({              
       method: 'get',              
       url: '/about'                                   
       }).success(function(response){                                                          
       window.location = '/about';                       
}).error(function(error){             
 alert("error");          
 });     
  };
  
  $scope.Done = function() { 
  $http({              
       method: 'POST',              
       url: '/addevent',
       data :{ "eventname": $scope.eventname,"evenDisc" :$scope.evenDisc,"eventdate" :$scope.eventdate,"eventPlace" :$scope.eventPlace}                                   
       }).success(function(response){ 
       alert(response) ;                                                   
       window.location = '/about';                       
}).error(function(error){             
 alert("error");          
 });     
  };
  
   } 
   ]);
    
 </script>
<body ng-controller='event' >
<div id="facebook-Bar">
  <div id="facebook-Frame">
        
        <div id="header-main-right">
          <div id="header-main-right-nav">
        <form method="post" action="" id="login_form" name="login_form">
          <table border="0" style="border:none">
            <tr>
              <td ><input type="submit" class="fbbutton" name="logout" value="Logout" ng-click="logout()" /></td>
            </tr>
             <tr>
              <td ><input type="submit" class="fbbutton" name="aboutPage" value="about" ng-click="about()" /></td>
            </tr>   
          </table>
        </form>
      </div>
          </div>
      </div>
       </div>

<!--Page-->
<div >
    		<h4 class="title">Friends  Page</h4>
    	</div><!--loginheader-->
  
<div class="center">
<h2 style="color:#141823; text-align:center;"></h2>
	</div>
  
  <div>
  <% if (flag ==0 ){ %>
  <h2 style="color:#141823; text-align:center;"> Friends List</h2>
