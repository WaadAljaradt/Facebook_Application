<script>
         
  var interestapp = angular.module('interestapp', []); 
   
      interestapp.controller('interest', ['$scope','$http',function($scope, $http) {        
    
       $scope.addInterest = function() { $http({              
       method: 'POST',              
       url: '/addinterest',              
       data: { "interestName": $scope.interestName }                         
       }).success(function(response){                                                    
       if(response.code == "200")  {             
       alert("Success to add interest");      
       window.location = '/interest';  
       } else{
       alert("Fail to add Post");       
       }    
}).error(function(error){             
 alert("error");          
 });     
  };
  
   $scope.home = function() { $http({              
       method: 'Get',              
       url: '/profile'                                   
       }).success(function(response){                                                          
       window.location = '/profile';                       
}).error(function(error){             
 alert("error");          
 });     
  };



  $scope.logout = function() { $http({              
       method: 'POST',              
       url: '/logout'                                   
       }).success(function(response){                                                          
       window.location = '/signin';                       
}).error(function(error){             
 alert("error");          
 });     
  };

   } 
   ]);
    
 </script>

