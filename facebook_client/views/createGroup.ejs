<script>
         
  var CreateGroupapp = angular.module('CreateGroupapp', []); 
   
      CreateGroupapp.controller('createGroup', ['$scope','$http',function($scope, $http) {        
    
       $scope.Create = function() { $http({              
       method: 'POST',              
       url: '/createGroup',              
       data: { "GroupName": $scope.GroupName, "GroupDesc": $scope.GroupDesc }                         
       }).success(function(response){ 
      console.log(response) ;                                                  
       if(response.code == "200")  {             
       alert("Success to create");      
       window.location = '/profile';  
       } else{
       alert("Fail to create");       
       }    
}).error(function(error){             
 alert("error");          
 });     
  };
  
   $scope.home = function() { $http({              
       method: 'Get',              
       url: '/profile'                                   
       }).success(function(response){                                                          
       window.location = '/profile';                       
}).error(function(error){             
 alert("error");          
 });     
  };



  $scope.logout = function() { $http({              
       method: 'POST',              
       url: '/logout'                                   
       }).success(function(response){                                                          
       window.location = '/signin';                       
}).error(function(error){             
 alert("error");          
 });     
  };

   } 
   ]);
    
 </script>

<body class="login"  ng-controller='createGroup' > 
<div id="facebook-Bar">
  <div id="facebook-Frame">
        
        <div id="header-main-right">
          <div id="header-main-right-nav">
        <form method="post" action="" id="login_form" name="login_form">
          <table border="0" style="border:none">
            <tr>
              <td ><input type="submit" class="fbbutton" name="logout" value="Logout" ng-click="logout()" /></td>
            </tr>
             <tr>
              <td ><input type="submit" class="fbbutton" name="homePage" value="Home" ng-click="home()" /></td>
            </tr>
            
            
          </table>
        </form>
      </div>
          </div>
      </div>
       </div>
      </div>
      
<!-- header ends here -->

<div class="loginbox radius">
<h2 style="color:#141823; text-align:center;">Welcome to Facebook</h2>
	<div class="loginboxinner radius">
    	<div class="loginheader">
    		<h4 class="title">Create your Groupe and connect with your friends</h4>
    	</div><!--loginheader-->
        
        <div class="loginform">
                	
        	<form id="login" action="" method="post">
            <p>
                    <input type="text" id="GroupName" name="GroupName" placeholder="Group Name" value="" class="radius mini" ng-model="GroupName" />
                </p>
            	<p>
                    <input type="text" id="GroupDesc" name="GroupDesc" placeholder="Group Description" value="" class="radius" ng-model="GroupDesc"/>
                </p>
                <p>
                 
                	<button class="radius title" name="client_login" ng-click="Create()">Create Group</button>
                </p>
            </form>
        </div><!--loginform-->
    </div><!--loginboxinner-->
</div><!--loginbox-->

