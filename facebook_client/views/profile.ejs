<script>
         
  var profileapp = angular.module('profileapp', []); 
   
      profileapp.controller('profile', ['$scope','$http',function($scope, $http) {        

  $scope.logout = function() { $http({              
       method: 'POST',              
       url: '/logout'                                   
       }).success(function(response){                                                          
       window.location = '/signin';                       
}).error(function(error){             
 alert("error");          
 });     
  };
  
$scope.about = function() { $http({              
       method: 'GET',              
       url: '/about'                                   
       }).success(function(response){                                                          
       window.location = '/about';                       
}).error(function(error){             
 alert("error");          
 });     
  };
  
 $scope.listGroups = function() { 
 $http({ 
  method : 'GET', 
  url: '/listGroups'
   }).success(function(response){  
        if(response.code == "200")                                                    
       window.location = '/groups';
       else
        alert("No results found");      
}).error(function(error){             
 alert("error");          
 });     
  };

  $scope.createGroup = function() { $http({              
       method: 'GET',              
       url: '/createGroup'                                   
       }).success(function(response){                                                          
       window.location = '/createGroup';                       
}).error(function(error){             
 alert("error");          
 });     
  };
  
  
  $scope.SearchGroup = function() { $http({              
       method: 'POST',              
       url: '/SearchGroup' ,
       data :{ GroupName : $scope.GroupName}                                 
       }).success(function(response){
       if(response.code == "200")                                                           
       window.location = '/group'; 
       else
        alert("No results found");
                             
}).error(function(error){             
alert(error);
        
 });     
  };
  
  
  $scope.addPost = function() { $http({              
       method: 'Post',              
       url: '/addPost' ,
       data :{ post : $scope.post}                                 
       }).success(function(response){
       if(response.code == "200"){  
        alert(response.value);                                                         
       window.location = '/profile'; 
      } else{
        alert(response.value);
        }
                             
}).error(function(error){             
alert(error);
        
 });     
  };

  
   $scope.SearchUser = function() { $http({              
       method: 'post',              
       url: '/SearchUser' ,
       data :{ UserName : $scope.UserName}                                 
       }).success(function(response){
       if(response.code == "200")                                                           
       window.location = '/user'; 
       else
        alert("No results found");
                             
}).error(function(error){             
alert(error);
        
 });     
  };
  
  
  
  
  
  
   } 
   ]);
    
 </script>
 
    
